<ul>
  <% @bookings.each do |booking| %>

    <div class="container">
      <div class="row">
          <% if booking.pet.available == "Available" && booking.pet.user == current_user %>
              <li><%= link_to booking.id, booking_path(booking) %> </li>
            <div class="col-4">
              <div class="card">
                <%= cl_image_tag booking.pet.photo.key, height: 300, width: 400, class: "w-100", crop: :fill %>
                <div class="card-body">
                <h4 class="card-title"><%= booking.pet.name %></h4>
                <p class="card-text"><%= booking.pet.description %></p>
                <%= link_to "See Profile", pet_path(booking.pet), class: "btn btn-primary" %> |
                <%= link_to "Edit", edit_booking_path(@booking) %> |
                <%= link_to "Delete",
                          booking_path(@booking),
                          method: :delete,
                          data: { confirm: "Are you sure?" } %>
                </div>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  <% end %>
</ul>
</div>
