<div class="p-5">
  <h1>Booking ID: <%= @booking.id %></h1>

  <ul class="list-group">
    <li class="list-group-item"><strong>Pet: </strong><%= @pet.name.capitalize %></li>
    <li class="list-group-item"><strong>Owner: </strong><%= @owner.first_name.capitalize %></li>
    <li class="list-group-item"><strong>Sitter: </strong><%= @sitter.first_name.capitalize %></li>
    <li class="list-group-item"><strong>Start Date: </strong><%= @booking.start_date %></li>
    <li class="list-group-item"><strong>End Date: </strong><%= @booking.end_date %></li>
    <li class="list-group-item"><strong>Price: </strong><%= @booking.price %></li>
    <li class="list-group-item"><strong>Current Status: </strong><%= @booking.status.capitalize %></li>
  </ul>

  <% if @pet.user == current_user %>
    <%= simple_form_for (@booking) do |f| %>
      <%= f.input :status, collection: Booking.statuses.keys %>
      <%= f.submit %>
      <%= link_to "Edit", edit_booking_path(@booking) %><br><br>
    <% end %>
  <% end %>

  <%= link_to "Back to Home", pets_path %> <br> <br>
  <%= link_to "Back to Bookings", pet_bookings_path(@booking) %> <br><br>
  <%= link_to "Delete",
              booking_path(@booking),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
</div>
