<div class="container p-5 " >
  <div class="row g-5">
      <div class="col-7">
        <div class="card shadow-sm" >
          <%= cl_image_tag @pet.photo.key, height: 300, width: 400, class: "w-100", id: "w-100", crop: :fill %>
          <div class="card-body">
            <h4 class="card-title"><%= @pet.name %></h4>
            <p class="card-text"><%= @pet.description %></p>
            <%= link_to "Book #{@pet.name}", pet_path(@pet), class: "btn btn-primary btn-block" %>
          </div>
        </div>
      </div>

      <div class="col-5">
        <div class="card" >
        <div class="d-flex p-1 mt-2 ">
            <div class="photo">
              <%= cl_image_tag @pet.photo.key, height: 300, width: 400,  class: "user-photo", crop: :fill %>
            </div>
            <div class="name align-self-center ml-3 mt-3">
              <h4 class="card-title"><%= @user.first_name %> <%= @user.last_name %></h4>
              <h5 class="card-title"><%= @user.user_type.capitalize %></h5>
            </div>
          </div>
          <div class="card-body">
            <p class="card-text"><%= @pet.description %></p>
            <%= link_to "Contact #{@user.first_name}", pet_path(@pet), class: "btn btn-primary btn-block mb-2 " %>
            <hr>
            <p style="text-align:center;">Cancellation policy: Flexible</p>
            <div class="credit-cards" style="text-align:center; width: 100%">
              <img height="40" src="https://shoplineimg.com/assets/footer/card_visa.png"/>
              <img height="40" class = "ml-3" src="https://shoplineimg.com/assets/footer/card_master.png"/>
              <img height="40" class = "ml-3" src="https://shoplineimg.com/assets/footer/card_paypal.png"/>
        </div>
      </div>

    </div>
      <div class="mt-5 card shadow-sm p-4  clearfix graph-star-rating">
                    <h5 class="mb-0 mb-4">Ratings and Reviews</h5>
                    <div class="graph-star-rating-header">
                        <div class="star-rating">
                            <a href="#"><i class="icofont-ui-rating active"></i></a>
                            <a href="#"><i class="icofont-ui-rating active"></i></a>
                            <a href="#"><i class="icofont-ui-rating active"></i></a>
                            <a href="#"><i class="icofont-ui-rating active"></i></a>
                        </div>
                    </div>
                        <div class="graph-star-rating-body">
                        <div class="rating-list mb-3">
                            <div class="rating-list-left text-black">
                                5 Stars
                            </div>
                            <div class="rating-list-center">
                                <div class="progress">
                                    <div style="width: 56%" aria-valuemax="5" aria-valuemin="0" aria-valuenow="5" role="progressbar" class="progress-bar bg-primary">
                                        <span class="sr-only">80% Complete (danger)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="rating-list mb-3">
                            <div class="rating-list-left text-black">
                                4 Stars
                            </div>
                            <div class="rating-list-center">
                                <div class="progress">
                                    <div style="width: 23%" aria-valuemax="5" aria-valuemin="0" aria-valuenow="5" role="progressbar" class="progress-bar bg-primary">
                                        <span class="sr-only">80% Complete (danger)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="rating-list mb-4">
                            <div class="rating-list-left text-black">
                                3 Stars
                            </div>
                            <div class="rating-list-center">
                                <div class="progress">
                                    <div style="width: 11%" aria-valuemax="5" aria-valuemin="0" aria-valuenow="5" role="progressbar" class="progress-bar bg-primary">
                                        <span class="sr-only">80% Complete (danger)</span>
                                    </div>
                                </div>
                            </div>
                        </div>

</div>
