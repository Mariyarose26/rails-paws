<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>Add your pet here</h1>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Pets</h3>
    <%= link_to "Add a pet ", new_pet_path, class: "btn btn-flat" %>
  </div>
  <div class="row">
    <% @pets.each do |pet| %>
      <div class="co-12 colsm-6 col-md-4">
        <%= link_to pet_path(pet), class: "text-decoration-none" do %>
            <%= pet.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<h1>Pets</h1>

<ul>
  <% @pets.each do |pet| %>
    <li>
    <%= link_to pet.name, pet_path(pet) %>
    <%= link_to "Edit", edit_pet_path(pet) %>
    <%= link_to "Delete",
                pet_path(pet),
                method: :delete,
                data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
